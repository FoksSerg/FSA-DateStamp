{
  "include_files": [
    "src/**/*.py",
    "requirements.txt",
    "README.md",
    "start_gui.py",
    "version.txt"
  ],
  "exclude_files": [
    "**/__pycache__",
    "*.log",
    "*.db",
    "logs/*",
    "*.pyc",
    "*.jpg",
    "*.jpeg",
    "*.png",
    "*.bmp",
    "*.tiff",
    "*.tif",
    "datestamp_settings.ini",
    "config.ini",
    "build/**",
    "dist/**",
    "*.spec"
  ],
  "windows8plus_build": {
    "description": "Сборка для Windows 8+ - современные возможности",
    "compatibility": "Windows 8, 8.1, 10, 11",
    "architecture": "x64",
    "python_version": "3.10-3.13",
    "features": [
      "x64 архитектура для современных систем",
      "Современные версии библиотек",
      "Оптимизированная производительность",
      "Поддержка всех современных Windows"
    ],
    "requirements": {
      "pillow": ">=9.0.0,<11.0.0",
      "opencv-python": ">=4.8.0,<5.0.0",
      "exifread": ">=2.3.0",
      "piexif": ">=1.1.3",
      "numpy": ">=1.24.0,<2.0.0",
      "pywin32": ">=306"
    }
  }
}
